<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Start here!</h5>
            </div>
            <div class="ibox-content">
              <h2>
                Create a Learning Path
              </h2>
                <form id="form" action="#" class="wizard-big">
                  <h1>Track</h1>
                    <fieldset>
                      <h2>Track Information</h2>
                      <div class="row">
                          <div class="col-lg-8">
                              <div class="form-group">
                                  <label>Name * </label>
                                  <input id="userName" name="userName" type="text" class="form-control required" placeholder="Ruby">
                              </div>
                          </div>
                          <div class="col-lg-4">
                              <div class="text-center">
                                  <div style="margin-top: 20px">
                                      <i class="fa fa-sign-in" style="font-size: 180px;color: #e5e5e5 "></i>
                                  </div>
                              </div>
                          </div>
                      </div>
                    </fieldset>
                    <h1>Goal</h1>
                    <fieldset>
                        <h2>Goal Information</h2>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Name * </label>
                                    <input id="name" name="name" type="text" class="form-control required">
                                </div>
                                <div class="form-group">
                                    <label>Description *</label>
                                    <input id="description" name="surname" type="text" class="form-control required">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group" id="wizard-datepicker">
                                  <label>Due date *</label>
                                <div class="input-group date">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input  type="text" class="form-control" required>
                                </div>
                               </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

</div>
