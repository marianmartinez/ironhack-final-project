<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInUp">

        <div class="ibox">
          <div class="ibox-title">
              <h5>Learning Tracks</h5>
              <div class="ibox-tools">
                <%= link_to 'Create new Track', new_track_path, class: 'btn btn-primary btn-xs' %>
              </div>
          </div>
          <div class="ibox-content">
              <div class="project-list">

                 <table class="table table-hover">
                   <thead>
                       <tr>
                         <th>Name</th>
                         <th></th>
                       </tr>
                   </thead>
                   <tbody>
                     <% @tracks.each do |track| %>
                       <tr>
                         <td class="Track-title">
                           <%= link_to "<strong>#{track.name}</strong>".html_safe, track_goals_path(track), id: "track=-#{track.id}" %></a>
                         </td>
                         <td class="project-actions">
                             <%= link_to edit_track_path(track), class:"btn btn-white btn-sm" do %>
                                <i class="fa fa-pencil"></i> Edit
                             <% end %>
                              <%= link_to track_path(track), method: :delete, class:"btn btn-white btn-sm", data: { confirm: 'Are you sure?'} do %>
                                 <i class="fa fa-trash"></i> Delete
                              <% end %>
                         </td>
                       </tr>
                       <% end %>
                   </tbody>
                 </table>
               </div>
            </div>
        </div>
      </div>
    </div>
  </div>
