<div class="row">
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInUp">

      <p><%= link_to tracks_path do %>
         <i class="fa fa-chevron-left"></i>  Track list
      <% end %></p>

      <h1><%= @track.name %></h1>

        <div class="ibox">
            <div class="ibox-title">
                <h5>My Goals</h5>
                <div class="ibox-tools">
                  <%= link_to 'Add a Goal', new_track_goal_path, class: 'btn btn-primary btn-xs' %>
                </div>
            </div>
            <div class="ibox-content">
              <div class="project-list">

                 <table class="table table-hover">
                   <thead>
                       <tr>
                           <th>Name</th>
                           <th>Progress</th>
                           <th>Due date</th>
                           <th></th>
                       </tr>
                    </thead>
                    <tbody>
                       <tr>
                          <% @goals.each do |goal| %>
                           <td class="project-title">
                              <a href=""><%= goal.name %></a>
                           </td>
                           <td class="project-completion">
                               <small>28%</small>
                               <div class="progress progress-mini">
                                   <div style="width: 28%;" class="progress-bar"></div>
                               </div>
                           </td>
                           <td class="resource-due-date">
                             <i class="fa fa-calendar"></i> <%= goal.goal_date.strftime('%d/%m/%Y') %>
                           </td>
                           <td class="project-actions">
                               <a href="#" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Edit </a>
                               <%= link_to track_goal_path(@track, goal), method: :delete, class:"btn btn-white btn-sm", data: { confirm: 'Are you sure?'} do %>
                                  <i class="fa fa-trash"></i> Delete
                               <% end %>
                           </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
               </div>
            </div>
        </div>
    </div>
  </div>
</div>
