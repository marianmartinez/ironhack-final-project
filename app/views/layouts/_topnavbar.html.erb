<header class="row border-bottom">
  <nav class="navbar navbar-fixed-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>
        <%= form_tag(search_page_path, method: :post, class: 'navbar-form-custom') do %>
            <div class="form-group">
              <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'What do you want to learn?', id: 'top-search' %>
            </div>
        <% end %>
    </div>
    <ul class="nav navbar-top-links navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle waves-effect waves-button waves-classic" data-toggle="dropdown" aria-expanded="false">
            <span class="user-name"><%= current_user.name %> <i class="fa fa-angle-down"></i></span>
            <%= image_tag(current_user.picture.small_thumb,
                        :width => 40,
                        :class => 'img-circle') %>
        </a>
        <ul class="dropdown-menu animated fadeInRight m-t-xs">

            <li>
              <%= link_to user_path(current_user) do %>
                <i class='fa fa-user'></i> Profile
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_path(current_user) do %>
               <i class='fa fa-cogs'></i> Settings
              <% end %>
            </li>
            <li class="divider"></li>
            <li><%= link_to "<i class='fa fa-sign-out'></i>LogOut".html_safe, logout_path(current_user), method: :delete %></li>
        </ul>
    </ul>
  </nav>
</header>
