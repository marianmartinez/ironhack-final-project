<div class="row">
<div class="col-lg-12">
<div class="wrapper wrapper-content animated fadeInUp">

  <div class="ibox">
    <div class="ibox-title">
        <h5>Resources</h5>
        <div class="ibox-tools">
        </div>
    </div>
    <div class="ibox-content">
       <div class="project-list">

          <table class="table table-hover">
            <thead>
              <tr>
                  <th>id</th>
                  <th>preview</th>
                  <th>Name</th>
                  <th>Created at:</th>
                  <th></th>
              </tr>
            </thead>

              <tbody>
                  <% @sources.each do |source| %>
                  <tr>
                      <td><%= source.id %></td>
                      <td><img class="pull-left width-1" src="<%= source.image %>" alt="source image" style="width:80px"</td>
                      <td><%= link_to "<strong>#{source.name}</strong>".html_safe, source.url, class: 'source' %></a></td>
                      <td><%= source.created_at.strftime('%d/%m/%Y') %></td>
                      <td class="project-actions">
                          <a href="#" class="btn btn-white btn-sm"><i class="fa fa-trash"></i> Delete </a>
                      </td>
                    </tr>
                  <% end %>
              </tbody>
            </table>
        </div>
    </div>
  </div>
</div>
</div>
</div>
