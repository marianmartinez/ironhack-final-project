<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
      <div>
          <h1 class="logo-name">SS</h1>
      </div>
      <h3>Welcome to Skillstep</h3>
      <p>All you ever want to learn starts here.</p>
      <p>Login in.</p>

      <%= form_tag sessions_path, class: 'm-t', method: :post do %>
        <div class="form-group">
          <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Email', required: true %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password', required: true %>
        </div>

        <%= submit_tag 'Log In', class: 'btn btn-primary block full-width m-b' %>

        <p class="text-muted text-center">
            <small>Do not have an account?</small>
        </p>

        <%= link_to "Create an account", signup_path, class: 'btn btn-sm btn-white btn-block' %>

      <% end %>
      <p class="m-t"> <small>Skillstep &copy; 2015</small> </p>
  </div>
</div>
